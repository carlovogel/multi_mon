QWidget{
    background-color: QLinearGradient( x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 #000000, stop: 0.1 #050505, stop: 0.5 #101010, stop: 0.9 #050505, stop: 1 #000000);
    border-style: outset;
    border-radius: 3px;
    border-width: 1px;
    border-color:rgb(35, 35, 35);
    outline:none;
        }

QToolTip{ 
    background-color: black;
    padding: 2px;
    border-style: outset;
    border-radius: 3px;
    border-width: 1px;
    border-color: rgb(115, 115, 115);
    font: "Noto Sans";
    font-size: 14px;
         }

QPushButton{
    background-color: black;
    border-color:rgb(115, 115, 115);
            }

QPushButton:hover{
    background-color: QLinearGradient( x1: 0, y1: 0, x2: 1, y2: 1, stop: 0 #000000, stop: 0.5 #050505, stop: 0.95 #121212, stop: 1 #262626);
    border-color: white;
    margin: 1px;
                  }

QToolButton{
    background-color: #000000;
    border-color:rgb(115, 115, 115);
            }

QToolButton:hover{
    background-color: QLinearGradient( x1: 0, y1: 0, x2: 1, y2: 1, stop: 0 #000000, stop: 0.5 #050505, stop: 0.95 #121212, stop: 1 #262626);
    border-color: white;
    margin: 1px;
                  }

QComboBox{
    background-color: #000000;
    border-color:rgb(115, 115, 115);
    height: 24px;
          }

QComboBox:hover{
    background-color: QLinearGradient( x1: 0, y1: 0, x2: 1, y2: 1, stop: 0 #000000, stop: 0.5 #050505, stop: 0.95 #121212, stop: 1 #262626);
    border-color: white;
    margin: 1px;
    padding-left: 3px;
                }

QComboBox::item{
    background-color: black;
    border-style: outset;
    border-radius: 3px;
    border-width: 1px;
    border:none;
    height: 25px;
    padding-left:-5px;
                 }

QComboBox::item:selected{
    background-color: QLinearGradient( x1: 0, y1: 0, x2: 1, y2: 1, stop: 0 #000000, stop: 0.5 #050505, stop: 0.95 #121212, stop: 1 #262626);
    border-style: outset;
    border-radius: 3px;
    border-width: 1px;
    border-color: white;
                         }

QRadioButton{
    background-color: transparent;
    border: 1px solid transparent
             }

QRadioButton:hover{
    background-color: transparent;
    border: 1px solid grey;
                   }
QRadioButton::indicator {
    width: 20px;
    height: 20px;
                         }
                         
                                 
QRadioButton::indicator:checked {
    image: url(checked_icon_file)
                                 }

QRadioButton::indicator:unchecked {
    image: url(unchecked_icon_file)
                                   }

QFrame{
    background: QLinearGradient( x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 #000000, stop: 0.1 #050505, stop: 0.5 #101010, stop: 0.9 #050505, stop: 1 #000000);
    border-color:rgb(35, 35, 35)
       }

QLabel{
    background: transparent;
    border:none;
       }
